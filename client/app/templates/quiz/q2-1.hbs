              <div class="small-12 column">
                <span {{action "updateQ21" "20"}}>{{#link-to 'quiz.q2-2' class="button radius yellow-background"}}20 points{{/link-to}}</span>
              </div>

            </div>

            
        
            
            
          

        </div> {{!-- end of answers --}}
      </div>{{!-- end of (dark) box --}}
      {{time-countdown elId="countdown-q2-1-r" class="show-for-large-up" action="nextQuestion"}}


    </div>
  </div>
</div>